*
  margin 0
  padding 0
a
  text-decoration none
  color #fff
body
  height 100vh
  width 100vw
  background #fff
  color #333
  font-family AvertaStd, Helvetica Neue, Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  overflow-x hidden
  display flex
  align-items center
  background-image url('/img/qx.jpg')
  background-size cover
  .card-container
    width 25vw
    padding 2rem
    box-sizing border-box
    background #fff
    box-shadow 0 1px 2px 1px #f5f5f5
    margin-left 15vw
    display flex
    flex-direction column
    align-items center
    justify-content center
    position relative
    .card-title
      margin-bottom 1rem
      font-size 1.2rem
      color #333
      font-weight 800
    .input-container
      display flex
      flex-direction column
      width 70%
      input
        width 100%
        margin-bottom 1rem
        height 2rem
        outline none
        border 0
        border-bottom 1px solid #878787
    .card-detail
      text-align center
      font-size 0.8rem
      margin-bottom 1rem
      span
        color #ff9247
    .auth-button
      background-image linear-gradient(135deg, #ffc47d, #ff9247)
      height 3rem
      width 7rem
      border-radius 10rem
      box-shadow 0 8px 20px 0 #efe8e1
      outline none
      border none
      display flex
      align-items center
      justify-content center
      span
        color #fff
        font-size 0.9rem
        font-weight 700
    .auth-button:hover
      background #ffc47d
.copyright-inf
  position absolute
  bottom 0.6rem
  text-align center
  width 100%
  p
    font-size 0.6rem
    color #878787
@font-face
  font-family 'AvertaStd'
  src url('/font/AvertaStd-Regular.ttf')
@media (max-width: 1056px)
  body
    justify-content center
    .card-container
      margin-left 0 !important 
      width 60vw
